{
	"name": "niowavedesign",
	"private": true,
	"version": "0.0.0",
	"scripts": {
		"dev": "vite",
		"storybook": "storybook dev -p 6006",
		"format": "npm run pretty && npm run lint",
		"clean cache": "npm cache verify",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"build-storybook": "storybook build",
		"pretty": "prettier --write \"src/**/*.{ts,tsx}\"",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"update: tamagui": "npm i tamagui @tamagui/animations-css @tamagui/shorthands @tamagui/vite-plugin @tamagui/lucide-icons",
		"update: storybook": "npx storybook@latest upgrade",
		"update: tamagui & storybook": "npm run update:tamagui && npm run update:storybook"
	},
	"dependencies": {
		"@rive-app/react-canvas": "^4.3.2",
		"@tamagui/animations-css": "^1.75.7",
		"@tamagui/lucide-icons": "^1.75.7",
		"@tamagui/shorthands": "^1.75.7",
		"@uidotdev/usehooks": "^2.4.1",
		"eslint-plugin-react": "^7.33.2",
		"expo-linear-gradient": "^12.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-native-svg": "^13.14.0",
		"tamagui": "^1.75.7",
		"tinycolor2": "^1.6.0"
	},
	"devDependencies": {
		"@nderscore/tamagui-typescript-plugin": "^0.5.4",
		"@storybook/addon-a11y": "^7.4.3",
		"@storybook/addon-actions": "^7.4.3",
		"@storybook/addon-controls": "^7.4.3",
		"@storybook/addon-docs": "^7.4.3",
		"@storybook/addon-essentials": "^7.4.3",
		"@storybook/addon-interactions": "^7.4.3",
		"@storybook/addon-links": "^7.4.3",
		"@storybook/addon-onboarding": "^1.0.8",
		"@storybook/addon-storysource": "^7.4.3",
		"@storybook/addon-styling": "^1.3.7",
		"@storybook/blocks": "^7.4.3",
		"@storybook/react": "^7.4.3",
		"@storybook/react-docgen-typescript-plugin": "^1.0.1",
		"@storybook/react-vite": "^7.4.3",
		"@storybook/testing-library": "^0.2.2",
		"@tamagui/vite-plugin": "^1.75.7",
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@types/react": "^18.2.22",
		"@types/react-dom": "^18.2.7",
		"@types/tinycolor2": "^1.4.4",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vitejs/plugin-react": "^4.0.3",
		"eslint": "^8.45.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.3",
		"eslint-plugin-storybook": "^0.6.15",
		"react-docgen-typescript": "^2.2.2",
		"storybook": "^7.4.3",
		"typescript": "^5.2.2",
		"vite": "^4.5.0"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"printWidth": 115,
		"endOfLine": "auto",
		"bracketSameLine": true,
		"semi": true,
		"singleQuote": false,
		"plugins": [
			"@trivago/prettier-plugin-sort-imports"
		],
		"importOrder": [
			"^react",
			"<THIRD_PARTY_MODULES>",
			"./*.type",
			"./*.config",
			"@tamagui/lucide-icons",
			"^tamagui",
			"^@tamagui/[^/]*",
			"./*.styled",
			"./*.helper",
			"@uidotdev/usehooks",
			"./*.use[^/]*",
			"^[./]"
		],
		"importOrderSortSpecifiers": true
	}
}
